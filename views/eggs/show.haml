%div.row
  %div.span8.columns.offset4
    %h2= @egg.name

%div.row.status_tb
  %div.span3.columns.offset3
    %h4 Status
  %div.span6.columns
    %p NC
%div.row.status_tb
  %div.span3.columns.offset3
    %h4 DB
  %div.span6.columns
    %p= @egg.pg_database != nil ? @egg.pg_database.status : NC
%div.row.status_tb
  %div.span3.columns.offset3
    %h4 Repository
  %div.span6.columns
    %p= @egg.git_repository.remote_url + " " + @egg.git_repository.updated_status if @egg.git_repository
%div.row.status_tb
  %div.span3.columns.offset3
    %h4 Server
  %div.span6.columns
    %p= @egg.dragon ? @egg.dragon.status : "no server"
%div.row.status_tb
  %div.span3.columns.offset3
    %h4 IP address
  %div.span6.columns
    %p= @egg.dragon.public_address if @egg.dragon
%div.row.status_tb
  %div.actions.span8.columns.offset4
    %a.btn.small.info{:href => "/eggs/#{@egg.id}/edit"} Edit
    %a.btn.small.danger{:href => "/eggs/#{@egg.id}/destroy", :"data-confirm" => "Are you sure ?", :"data-method" => "delete", :rel => "nofollow"} Destroy
