%div.row
  %div.span12.columns
    %h2 Apps
    %legend Manage your apps
    %table.zebra-striped{:style => "margin-bottom: 0;"}
      %thead
        %tr
          %th Name
          %th Status
          %th Repository
          %th Repository Status
          %th Ip
          %th token
          %th Server status
          %th
            %a{:href => "/apps/new"}
              %img{:src => "/img/plus.png", :height => "20px"}
      - if @apps.count > 0
        - @apps.each do |app|
          %tbody
            %tr
              %td= app.name
              %td NC
              %td= app.git_repository.remote_url if app.git_repository
              %td= app.git_repository.updated_status if app.git_repository
              %td= app.dragon.status
              %td= app.dragon.token
              %td= app.dragon.public_address
              %td
                %a.btn.small.info{:href => "/apps/#{app.id}"} Show
                %a.btn.small{:href => "/apps/#{app.id}/edit"} Edit
                %a.btn.small.danger{:href => "/apps/#{app.id}/destroy", :"data-confirm" => "Are you sure ?", :"data-method" => "delete", :rel => "nofollow"} Destroy
