%div.row
  %div.span12.columns
    %h2 Users
    %legend Manage your users
    - if @users.count > 0
      %table.zebra-striped{:style => "margin-bottom: 0;"}
        %thead
          %tr
            %th Name
            %th Email
            %th Login
            %th Role
            %th
              %a{:href => "/users/new"}
                %img{:src => "/img/plus.png", :height => "20px"}
        - @users.each do |user|
          %tbody
            %tr
              %td= user.name
              %td= user.email
              %td= user.login
              %td= user.role
              %td
                %a.btn.small.primary{:href => "/users/#{user.id}"} Show
                %a.btn.small{:href => "/users/#{user.id}/edit"} Edit
                - if (user.id != env['warden'].user.id)
                  %a.btn.small.danger{:href => "/users/#{user.id}", :"data-confirm" => "Are you sure ?", :"data-method" => "delete", :rel => "nofollow"} Destroy